{
  "name": "flare-foundry-starter-fork",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:flare-foundation/flare-foundry-starter.git",
  "license": "MIT",
  "scripts": {
    "-----Linting-----": "echo \"Linting scripts\"",
    "lint:fix": "solhint \"{src,script,test}/**/*.sol\" --fix",
    "lint:check": "solhint \"{src,script,test}/**/*.sol\"",
    "-----Formatting-----": "echo \"Formatting scripts\"",
    "format:check": "prettier --check --plugin=prettier-plugin-solidity \"{src,script}/**/*.sol\"",
    "format:fix": "prettier --write --plugin=prettier-plugin-solidity \"{src,script}/**/*.sol\""
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^1.4.3",
    "solhint": "^5.0.5"
  },
  "packageManager": "yarn@1.22.22",
  "prettier": {
    "printWidth": 119,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "tabWidth": 4,
    "arrowParens": "avoid",
    "plugins": [ "prettier-plugin-solidity" ],
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "parser": "solidity-parse",
          "printWidth": 80,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false
        }
      }
    ]
  }

}
